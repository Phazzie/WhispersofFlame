{
  "name": "client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:mock": "vitest run --testNamePattern Mock",
    "test:real": "vitest run --testNamePattern Real",
    "test:nsfw-filter": "vitest run --testNamePattern NSFW || true",
    "type-check": "tsc --noEmit",
    "lint": "ng lint",
    "lint:no-any": "eslint . --ext .ts --rule '@typescript-eslint/no-explicit-any: error'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate:naming": "tsx ../scripts/validate-naming.ts",
    "validate:comments": "tsx ../scripts/validate-comments.ts",
    "validate:mock-real-parity": "tsx ../scripts/validate-mock-real-parity.ts",
    "validate:god-classes": "tsx ../scripts/validate-god-classes.ts",
    "validate:no-persistence": "tsx ../scripts/validate-no-persistence.ts",
    "validate:interface-docs": "echo 'Interface docs validation not yet implemented'",
    "validate:ember-tone": "echo 'Ember tone validation not yet implemented'",
    "validate:docs-updated": "git diff --quiet docs/ || echo 'Documentation updated'",
    "ccr:calculate": "tsx ../scripts/calculate-ccr.ts"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@9.8.1",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@types/netlify-identity-widget": "^1.9.7",
    "netlify-identity-widget": "^1.9.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.8",
    "angular-eslint": "21.0.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "glob": "^11.1.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4",
    "vitest": "^4.0.8",
    "zone.js": "^0.15.1"
  }
}
